{
  "compilerOptions": {
    "target": "esnext",
    "module": "es2020",
    "lib": [
      "esnext"
    ],
    "rootDir": "src",
    "outDir": "types",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "alwaysStrict": true,
    "strict": true,
    "noImplicitOverride": true,
    "removeComments": true,
    "declaration": true,
    "emitDeclarationOnly": true,
    "skipLibCheck": true,
    "newLine": "crlf"
  },
  "exclude": [
    "test"
  ]
}
