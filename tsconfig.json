{
  "compilerOptions": {
    "target": "esnext",
    "module": "es2020",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "alwaysStrict": true,
    "strict": true,
    "noImplicitOverride": true,
    "removeComments": true,
    "declaration": true,
    "emitDeclarationOnly": true,
    "skipLibCheck": true,
    "newLine": "crlf"
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.test.ts"
  ]
}
